@page
@model TimeTracker.Pages.Students.ViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Student Database</h1>

<p>
    <a asp-page="Create" class="Button_Style">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Math
            </th>
            <th>
                Reading
            </th>
            <th>
                Barcode ID
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Math)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BarcodeID)
            </td>
            <td>
                <a class="Button_Style SideBySide" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> 
                <a class="Button_Style SideBySide" asp-page="./Details" asp-route-id="@item.Id">Details</a> 
                <a class="Button_Style SideBySide" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
