@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Clock In & Out</h1>

<form>
    <p>
        <input type="text" asp-for="SearchString" autofocus/>
        <input type="submit" value="Filter" autofocus/>
    </p>
</form>

<form method="post">
    <p>
        <input type="submit" value="Clear Records" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th> 
            <th>
                Last Name
            </th>
            <th>
                Math
            </th>
            <th>
                Reading
            </th>
            <th>
                Time In
            </th>
            <th>
                Time Out
            </th>
        </tr>
    </thead>
    <tbody>
       @if (Model.Student != null)
           {
        @foreach (var item in Model.Student)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Math)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reading)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeIn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeOut)
                </td>
            </tr>
            }
           }
    </tbody>
</table>
